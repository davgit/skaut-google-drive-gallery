<?xml version="1.0"?>
<ruleset>
	<file>plugin</file>
	<exclude-pattern>plugin/bundled/vendor/*/*</exclude-pattern>
	<exclude-pattern>plugin/bundled/*.min.*</exclude-pattern>
	<exclude-pattern>*.js</exclude-pattern>
	<exclude-pattern>*.css</exclude-pattern>

	<config name="installed_paths" value="vendor/wp-coding-standards/wpcs,vendor/wimg/php-compatibility"/>
	<config name="testVersion" value="5.6-7.2"/>

	<arg name="colors"/>
	<arg value="s"/>

	<rule ref="PHPCompatibility"/>
	<rule ref="WordPress-Extra"/>
</ruleset>
